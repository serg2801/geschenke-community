var content = '<%= j render(@products) %>';
var container = $('#products-container');
$('#products-container').append(content);
$("#more-products").attr("href","?seite=<%= params[:seite].to_i + 1 %>");


container.imagesLoaded(function(){
  container.masonry('reload');
  $("#more-products").removeClass("loading");
});

<% if @products.total <= @products.options[:size].to_i * params[:seite].to_i %>
  $("#more-products").hide();
<% end %>