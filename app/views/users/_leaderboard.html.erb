<div id="leaderboard">
  <div id="leaders">
    <div class="leader">
      <%= image_tag hero1.value.gsub('type=square','width=80&height=80'), :alt => hero1.name %>
    </div>
    <% heroes.each do |hero| %>
      <a href="<%= user_path(hero) %>" class="leader">
        <%= image_tag hero.image.gsub('type=square','width=80&height=80'), :alt => hero.name %>
      </a>
    <% end %>
  </div>
  <div id="leaderboard-description">
  </div>
</div>
